#Paffs
import os

Import('envGlobal')

envGlobal.SConscript([
	os.path.join(os.path.abspath('.'), 'driver/SConscript')
	], exports='envGlobal')
	
envGlobal.Append(CPPPATH=[os.path.abspath('.')])

env = envGlobal.Clone()

files  = env.Glob('*.cpp')

library = env.StaticLibrary('paffs', files)

envGlobal.Append(LIBS=[
	'paffs',
	'simuDriver',
	'outpost_rtos',
	'outpost_time',
])
envGlobal.Install('$BUILDPATH/lib', library)
