
import os

Import('envGlobal')

envGlobal.Append(CPPPATH=[os.path.abspath('.')])

env = envGlobal.Clone()

files  = env.Glob('*.cpp')

library = env.StaticLibrary('paffs', files)

envGlobal.Append(LIBS=['paffs',
					   'simuDriver',
					   'outpost_rtos',
					   'outpost_time',
#					   'outpost_utils',
])
envGlobal.Install('$BUILDPATH/lib', library)
