cd ~
mkdir rtems
cd rtems
git clone git://git.rtems.org/rtems-source-builder.git
cd rtems-source-builder
cd rtems
../source-builder/sb-set-builder --prefix=/opt/rtems-4.12 4.12/rtems-sparc
PATH=$PATH:/opt/rtems-4.12/bin
cd ../..
git clone git://git.rtems.org/rtems.git
cd rtems
../rtems-source-builder/source-builder/sb-bootstrap
cd ..
mkdir b-leon3
cd b-leon3
../rtems/configure --target=sparc-rtems4.12 --enable-rtemsbsp=leon3 --prefix=/opt/rtems-4.12
make
make install
